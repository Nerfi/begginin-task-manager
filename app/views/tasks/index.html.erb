<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<h2><%= link_to task.title, task_path(task) %></h2> <!-- we add next to the path the task object because is a dinamic URL /1,/2 -->
<p><%= task.details %></p>
<%= link_to "New task", new_task_path %> || <%= link_to "Delete task", task_path(task),
method: :delete,
data: {confirm: "are you sure?"}  %>

<p><%= task.completed  %></p>
<% end %>




<h1>My tasksss</h1>

<ul id="tasks">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="fa fa-check-square-o"></i>
      <% else %>
        <i class="fa fa-square-o"></i>
      <% end %>
      <%= link_to task.title, task_path(task.id) %>
